{
  "compilerOptions": {
    "target": "ES2016",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["./src/shadcn-ui/*"],
      "shadcn-ui": ["./src/shadcn-ui/index.ts"]
    }
  },
  "exclude": ["dist", "docs"]
}
